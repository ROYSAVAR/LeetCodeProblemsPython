class Solution(object):
    def removeDuplicates(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """

        if nums is None:
            return 0
        if len(nums) == 1:
            return 1

        i = 1
        while i<len(nums):
            # si el numero que sigue es igual lo eliminamos
            if nums[i-1] == nums[i]:
                del nums[i]
            else:
                i+=1
            
        return len(nums)

            
        
